Bootstrap: docker
From: ubuntu:22.04

%files
    ./ /rdeval

%post
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        musl-dev \
        zlib1g-dev \
        libbz2-dev \
        liblzma-dev \
        libssl-dev \
        cmake \
        git \
        perl \
        autoconf \
        automake \
        libtool \
        pkg-config \
        ca-certificates \
        wget

    # Build htslib from source
    rm -rf /tmp/htslib
    cd /tmp
    git clone https://github.com/samtools/htslib.git
    cd htslib
    git submodule update --init --recursive
    autoreconf -i
    ./configure --prefix=/tmp/htslib --disable-libcurl --disable-bz2
    make -j
    make install prefix=/usr

    # Build your project
    cd /rdeval
    make -j static

%labels
    Author Giulio Formenti
    Purpose Static rdeval build

%runscript
    exec /rdeval/build/bin/rdeval "$@"
